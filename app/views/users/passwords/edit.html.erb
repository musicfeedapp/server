<div class="logo">
  <%= link_to image_tag("logo.png"), "#" %>
</div>

<div class="form-container" >
  <h1>Let's start over, shall we?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "password-form" }) do |f| %>

    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true, minlength: "8", class: "password", placeholder: "New Password" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, minlength: "8", "data-rule-equalTo": "#user_password", class: "password", placeholder: "Confirm Password", style: "margin-top: 10px" %>

    <%= f.submit "Change my password", class: "submit-password" %>
  <% end %>
</div>
